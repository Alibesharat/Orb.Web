@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using Orb.Web.Models
@model User
@{
    ViewData["Title"] = Model.DisplayName;
    Layout = "_Layout";
    var posts = ViewBag.Posts as List<BlogPost>;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex align-items-center mb-4">
                <img src="@Model.ProfileImageUrl" alt="@Model.DisplayName" class="rounded-circle me-3" width="80" height="80">
                <div>
                    <h1 class="mb-1">@Model.DisplayName</h1>
                    <p class="text-muted mb-2">@Model.Username</p>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p>@Model.Bio</p>
                    }
                    
                    <div class="d-flex align-items-center">
                        <small class="text-muted">@ViewBag.FollowerCount دنبال‌کننده · @ViewBag.FollowingCount دنبال شده</small>
                        
                        @if (User.Identity.IsAuthenticated && int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)) != Model.Id)
                        {
                            if (ViewBag.IsFollowing)
                            {
                                <form asp-action="Unfollow" asp-controller="User" method="post" class="ms-3">
                                    <input type="hidden" name="userId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary rounded-pill">دنبال می‌کنید</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Follow" asp-controller="User" method="post" class="ms-3">
                                    <input type="hidden" name="userId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-primary rounded-pill">دنبال کردن</button>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
            
            <div class="border-bottom mb-4"></div>
            
            <h2 class="mb-4">مقالات @Model.DisplayName</h2>
            
            @if (posts != null && posts.Any())
            {
                foreach(var post in posts)
                {
                    <div class="card border-0 mb-4">
                        @if (!string.IsNullOrEmpty(post.CoverImageUrl))
                        {
                            <img src="@post.CoverImageUrl" class="card-img-top rounded" alt="@post.Title">
                        }
                        <div class="card-body px-0">
                            <h3 class="card-title">
                                <a href="@Url.Action("Post", "Blog", new { id = post.Id })" class="text-decoration-none text-dark">@post.Title</a>
                            </h3>
                            <p class="card-text text-muted">@post.Summary</p>
                            <div class="d-flex align-items-center">
                                <small class="text-muted">@post.CreatedAt.ToString("dd MMMM yyyy") · @post.ReadTime دقیقه مطالعه</small>
                                @if (post.Tags != null && post.Tags.Any())
                                {
                                    <div class="ms-auto">
                                        @foreach (var tag in post.Tags.Take(3))
                                        {
                                            <a href="@Url.Action("Index", "Blog", new { tag })" class="badge bg-light text-dark text-decoration-none me-1">@tag</a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center p-5 bg-light rounded">
                    <p class="mb-0">هنوز مقاله‌ای منتشر نشده است.</p>
                </div>
            }
        </div>
    </div>
</div>