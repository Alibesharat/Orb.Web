<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - اُرب</title>
    <!-- Bootstrap 5 RTL CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Vazirmatn Font (Persian) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/Vazirmatn-font-face.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css?v1" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <!-- Main Navigation - Simplified and Lighter -->
        <nav class="navbar navbar-expand-lg navbar-light py-2 border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">
                    <i class="fa-solid fa-circle-nodes me-1"></i>اُرب
                </a>
                
                <!-- Hamburger menu for mobile -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Main navigation items -->
                    <ul class="navbar-nav mx-auto mb-0">
                        <li class="nav-item">
                            <a class="nav-link px-3" href="/">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-controller="Home" asp-action="about">درباره</a>
                        </li>
                    </ul>
                    
                    <!-- Search and User menu -->
                    <div class="d-flex align-items-center">
                        <div class="me-3 position-relative search-container">
                            <a href="#" class="text-secondary" id="searchToggle">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </a>
                            <div class="search-popup d-none position-absolute bg-white shadow-sm p-3 rounded" style="width: 300px; right: 0; top: 100%; z-index: 1000;">
                                <form>
                                    <input type="search" class="form-control border-0 bg-light" placeholder="جستجوی مقالات...">
                                </form>
                            </div>
                        </div>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <img src='@((User.FindFirst("ProfileImageUrl")?.Value) ?? "https://via.placeholder.com/32")' class="rounded-circle me-2" width="32" height="32" alt="Profile">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile" >پروفایل</a></li>
                                    <li><a class="dropdown-item" href="/Blog/MyPosts">مقالات من</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Account/Logout">خروج</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="/Account/Login" class="btn btn-link text-decoration-none text-dark me-2 px-0">ورود</a>
                            <a href="/Account/Register" class="btn btn-sm btn-dark rounded-pill">شروع کنید</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content area -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Newsletter Section -->
    <section class="bg-light py-5 border-top top-margin">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <h3 class="fw-bold mb-3">به خبرنامه ما بپیوندید</h3>
                    <p class="mb-4">آخرین مقالات، دیدگاه‌ها و روندها را هر هفته در ایمیل خود دریافت کنید.</p>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="آدرس ایمیل شما">
                        <button class="btn btn-dark px-4" type="button">اشتراک</button>
                    </div>
                    <p class="small text-muted">با اشتراک، شما با <a href="/Privacy" class="text-muted">سیاست حفظ حریم خصوصی</a> ما موافقت می‌کنید</p>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-5 bg-white">
        <div class="container">
            <div class="row mb-4">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="fw-bold mb-3">اُرب بلاگ</h5>
                    <p class="text-muted">ایده‌هایی که برای شما مهم هستند را کشف کنید. دیدگاه‌های جدید را در هر موضوعی بخوانید و به اشتراک بگذارید.</p>
                    <div class="d-flex mt-3">
                        <a href="#" class="me-3 text-muted"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="me-3 text-muted"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="me-3 text-muted"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="me-3 text-muted"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-6 mb-4 mb-lg-0">
                    <h6 class="fw-bold mb-3">دسته‌بندی‌ها</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/Category/Technology" class="text-decoration-none text-muted">تکنولوژی</a></li>
                        <li class="mb-2"><a href="/Category/Design" class="text-decoration-none text-muted">طراحی</a></li>
                        <li class="mb-2"><a href="/Category/Business" class="text-decoration-none text-muted">کسب‌وکار</a></li>
                        <li class="mb-2"><a href="/Category/Productivity" class="text-decoration-none text-muted">بهره‌وری</a></li>
                        <li class="mb-2"><a href="/Category/Culture" class="text-decoration-none text-muted">فرهنگ</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-6 mb-4 mb-lg-0">
                    <h6 class="fw-bold mb-3">شرکت</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/About" class="text-decoration-none text-muted">درباره</a></li>
                        <li class="mb-2"><a href="/Contact" class="text-decoration-none text-muted">تماس</a></li>
                        <li class="mb-2"><a href="/Careers" class="text-decoration-none text-muted">فرصت‌های شغلی</a></li>
                        <li class="mb-2"><a href="/Partners" class="text-decoration-none text-muted">شرکا</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="fw-bold mb-3">مقالات ویژه</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">آینده هوش مصنوعی در تولید محتوا</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">چگونه مینیمالیسم دیدگاه من را نسبت به طراحی تغییر داد</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">زندگی پایدار: تغییرات کوچک، تاثیر بزرگ</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col-md-6 small">
                    <span class="text-muted">&copy; @DateTime.Now.Year اُرب بلاگ - تمامی حقوق محفوظ است</span>
                </div>
                <div class="col-md-6 text-md-end small">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item"><a href="/Privacy" class="text-decoration-none text-muted">حریم خصوصی</a></li>
                        <li class="list-inline-item"><a href="/Terms" class="text-decoration-none text-muted">شرایط</a></li>
                        <li class="list-inline-item"><a href="/Sitemap" class="text-decoration-none text-muted">نقشه سایت</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        // Simple toggle for search popup
        document.getElementById('searchToggle').addEventListener('click', function(e) {
            e.preventDefault();
            const searchPopup = document.querySelector('.search-popup');
            searchPopup.classList.toggle('d-none');
            if (!searchPopup.classList.contains('d-none')) {
                searchPopup.querySelector('input').focus();
            }
        });
        
        // Close search popup when clicking outside
        document.addEventListener('click', function(e) {
            const searchContainer = document.querySelector('.search-container');
            const searchToggle = document.getElementById('searchToggle');
            if (!searchContainer.contains(e.target) || e.target === searchToggle) {
                document.querySelector('.search-popup').classList.add('d-none');
            }
        });
    </script>
    
    <!-- Custom styles for the blog layout -->
    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
            color: #292929;
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Vazirmatn', sans-serif;
            letter-spacing: -0.01em;
        }
        
        .navbar {
            background-color: rgba(255, 255, 255, 0.98);
            box-shadow: none;
        }
        
        .navbar-brand {
            font-family: 'Vazirmatn', sans-serif;
            letter-spacing: -0.03em;
            font-size: 1.4rem;
        }
        
        .nav-link {
            font-weight: 400;
            letter-spacing: 0.01em;
            color: #555;
        }
        
        .nav-link:hover {
            color: #000;
        }
        
        .btn {
            font-weight: 600;
        }
        
        .btn-sm {
            padding: 0.25rem 0.8rem;
        }
        
        .rounded-pill {
            border-radius: 50rem;
        }
        
        main {
            min-height: 70vh;
        }
        
        /* Medium-inspired styles */
        .article-title {
            font-family: 'Vazirmatn', sans-serif;
            letter-spacing: -0.03em;
            line-height: 1.2;
        }
        
        .article-body {
            font-family: 'Vazirmatn', sans-serif;
            font-size: 1.125rem;
            line-height: 1.8;
        }
        
        /* Fix top spacing */
        .pt-0 {
            padding-top: 0 !important;
        }
        
        .mt-0 {
            margin-top: 0 !important;
        }
        
        /* Subtle border */
        .border-bottom {
            border-bottom: 1px solid rgba(0,0,0,0.05) !important;
        }
    </style>
    
    @RenderSection("Scripts", required: false)
</body>
</html>